<%- include("header") -%>
<div class="container mt-4">
    <form action="/search" method="post">
        <input type="search" name="search" id="">
        <button type="submit" name="search_btn" class="btn btn-primary">Search</button>
    </form>
    <h3 class="mt-2">Available Books</h3>
    <table class="table table-dark table-hover table-responsive mt-2">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Description</th>
            <!-- <th>Delete</th> -->
        </tr>
        <% bookItems.forEach(book => { %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.category %></td>
                <td><%= book.description %></td>
                <!-- <td>
                    <form action="/delete" method="post">
                        <button type="submit" class="btn btn-danger" name="delete" value="<%= book._id %>">Delete</button>
                    </form>    
                </td> -->
            </tr>
        <% }) %>
    </table>
    <a href="/addnew" class="btn btn-primary">Add Book</a>
</div>
<%- include("footer") -%>